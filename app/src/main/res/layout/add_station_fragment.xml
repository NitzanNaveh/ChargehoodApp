<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8FCF1"
    android:layoutDirection="ltr"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/AddStationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="Add Your Charging Station"
            android:textColor="#02343F"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/StationPic"
            android:layout_width="350dp"
            android:layout_height="170dp"
            android:layout_marginTop="32dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_station_pic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/AddStationTitle" />

        <LinearLayout
            android:id="@+id/buttonsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/StationPic">

            <ImageButton
                android:id="@+id/cameraButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="8dp"
                android:background="@null"
                android:src="@drawable/ic_camera"
                android:scaleType="fitCenter"
                android:contentDescription="Open Camera" />

            <ImageButton
                android:id="@+id/galleryButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@null"
                android:src="@drawable/ic_gallery"
                android:scaleType="fitCenter"
                android:contentDescription="Open Gallery" />
        </LinearLayout>

        <fragment
            android:id="@+id/autocomplete_fragment"
            android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/buttonsLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <TextView
            android:id="@+id/connectionTypeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connection Type"
            android:textColor="#02343F"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/autocomplete_fragment" />

        <RadioGroup
            android:id="@+id/ConnectionTypeGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/connectionTypeTitle">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/Type1"
                app:buttonTint="#02343F"
                android:textColor="#02343F"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type 1 (SAE J1772)" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/Type2"
                app:buttonTint="#02343F"
                android:textColor="#02343F"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type 2 (IEC 62196-2)" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/CCS"
                app:buttonTint="#02343F"
                android:textColor="#02343F"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CCS" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/CHAdeMO"
                app:buttonTint="#02343F"
                android:textColor="#02343F"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CHAdeMO" />

        </RadioGroup>

        <TextView
            android:id="@+id/chargingSpeedTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Charging Speed"
            android:textColor="#02343F"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ConnectionTypeGroup" />

        <RadioGroup
            android:id="@+id/chargingSpeedGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chargingSpeedTitle">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/speedSlow"
                app:buttonTint="#02343F"
                android:textColor="#02343F"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Level 1 (3-5 kW)" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/speedMedium"
                app:buttonTint="#02343F"
                android:textColor="#02343F"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Level 2 (7-22 kW)" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/speedMax"
                app:buttonTint="#02343F"
                android:textColor="#02343F"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Level 3 (50+ kW)" />

        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/PriceInputLayout"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="#02343F"
            android:textColorHint="#77BFBE"
            app:errorEnabled="true"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/chargingSpeedGroup"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/PriceEditText"
                style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="#02343F"
                android:hint="Price per kW"
                android:inputType="phone" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/AddStationButton"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="180dp"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal"
            android:text="Add Station"
            android:textSize="20sp"
            android:textColor="#02343F"
            app:backgroundTint="#77BFBE"
            app:strokeColor="#77BFBE"
            app:rippleColor="#A6D8D7"
            app:strokeWidth="2dp"
            app:layout_constraintTop_toBottomOf="@id/PriceInputLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>